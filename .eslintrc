{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:import/errors"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"generators": false,
			"objectLiteralDuplicateProperties": false
		}
	},
	"plugins": ["import"],
	"rules": {
		"no-unused-vars": ["error", {
			"args": "none",
			"vars": "all"
		}]
	}
}
